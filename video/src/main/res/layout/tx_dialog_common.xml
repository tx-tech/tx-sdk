<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="16dp"
    android:background="@drawable/tx_shape_round_3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:textColor="@color/tx_black"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="确定离开"
        />

    <TextView
        android:id="@+id/tv_content"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:textColor="@color/tx_black"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="请选择暂时离开还是结束会话？" />

    <TextView
        android:id="@+id/tv_tip"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/tx_color_ce1b2b"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="请选择暂时离开还是结束会话？" />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:id="@+id/xpopup_divider"
        android:background="@color/tx_divider"
        android:layout_height=".5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancel"
            android:textSize="16sp"
            tools:text="暂时离开"
            android:gravity="center"
            android:textColor="@color/tx_black"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/tx_style_click_2"
            />

        <View
            android:id="@+id/xpopup_divider_h"
            android:layout_width=".5dp"
            android:background="@color/tx_divider"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:textSize="16sp"
            tools:text="结束会话"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/tx_color_006DFF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            style="@style/tx_style_click_3"
            />
    </LinearLayout>
</LinearLayout>